package CalculadoraIMC;

public class ProcesosDeCalculo {
 
	int edad;
	double peso;
	int estatura;
	String nombre;
	 
	ProcesosDeCalculo(int edadusuario, double pesousuario, int estaturausuario, String nombreusuario){
		edad=edadusuario;
		peso=pesousuario;
		estatura=estaturausuario;
		nombre=nombreusuario;
		}
	public double imc (){
		return peso/(estatura*estatura);
	
	
	if (imc() <16.00){
		System.out.println("Delgadez Severa");
	}else if (imc() <= 16.00|| imc() <=16.99){
		System.out.println(" Delgadez moderada");
	}else if (imc () <=17.00 || imc () <= 18.49){
		System.out.println("Delgadez aceptable");
	}else if (imc () <=18.50 || imc () <= 24.99){
		System.out.println("Peso Normal");
	}else if (imc() <=25.00 || imc () <= 29.99){
		System.out.println("Sobrepeso");
	}else if (imc () >=30.00 || imc() <= 34.99){
		System.out.println("Obeso: Tipo I (Riesgo Moredado");
	}else if (imc ()>=35.00 || imc() <= 39.99){
	    System.out.println("Obeso:tipo II (riego severo)");
	}else if (imc ()>=40){
		System.out.println("Obeso:Tipo III (riesgo muy severo)");
	}else{
		System.out.println("No existe claseficación");
	}
	}
	
